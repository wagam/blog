---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 750px;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				overflow: hidden;
				width: 750px;
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;

			}
			ul .top-post {
				overflow: hidden;
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
				background: var(--black);
				color: var(--white);

				background-image: linear-gradient(rgba(255, 255, 255, 0.09) 1px, transparent 1px),
				linear-gradient(90deg, rgba(255, 255, 255, 0.09) 1px, transparent 1px);
				background-size: 30px 30px;
			}
			.top-post a {
				display: grid;
				grid-template-rows: 1fr 1fr;
				grid-template-columns: 1fr 3fr;
				position: relative;
				height: 450px;
				color: var(--white);
				padding: 2rem;
			}
			.top-post img {
				width: 100%;
			}
			.top-post .title {
				font-size: 2.5rem;
			}

			.top-post .date {
				align-self: end;
				justify-self: end;
				color: var(--white)
			}

			.top-post .tags {
				align-self: end;
				justify-self: start;
				border: 2px solid var(--white);
				padding: 1rem;
				border-radius: 8px;
				font-size: 2rem;
				font-weight: bold;
				line-height: 1.2;
			}

			.top-post .cassette-rainbow {
				position: absolute;
				top: 145px;
				left: -130px;
				transform: skew(0, 45deg);
				height: 100px;
				width: 100%;
			}

			.other-post {
				background: var(--black);
				border: 1px solid black;
			}

			.other-post .sticker {
				display: flex;
				gap: 12px;
				align-items: center;
				background: var(--beige);
				height: 88px;
				border-radius: 8px;
				color: var(--black);
				margin: 12px 84px;

			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
			}

			.other-post:hover {
				margin-bottom: 5px;
			}

			.other-post:nth-child(3n-2) {
				margin: 0 5px 0 3px;
			}
			.other-post:nth-child(3n-1) {
				margin: 0 3px 0 5px;
			}
			.other-post:nth-child(3n) {
				margin: 0 0 0 8px;
			}

			.other-post:nth-child(3n -2) .sticker {
				margin: 12px 86px 12px 82px;
			}
			.other-post:nth-child(3n-1) .sticker {
				margin: 12px 82px 12px 86px;
			}
			.other-post:nth-child(3n) .sticker {
				margin: 12px 80px 12px 88px;
			}

			.other-post .title {
				background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0.3) 1px, transparent 1px);
				background-size: 100% 20px;
				height: 65px;
				width: 395px;
      	position: relative;
			}

			.top-post .rainbow-line {
				height: 20px;
			}
			.other-post .cassette-rainbow {
				display: flex;
			}
			.other-post .rainbow-line {
				width: 14px;
				height: 88px;
			}

			.other-post .rainbow-line:first-child {
				border-radius: 8px 0 0 8px;
			}
			.other-post h4 {
				font-family: "Caveat Variable", cursive;
				font-weight: bold;
				font-size: 24px;

			}
			.macaron {
				border: 2px solid var(--black);
				border-radius: 0px 8px 8px 0;
				margin: 8px;
				font-weight: bold;
				font-size: 12px;
				color: var(--black);
				text-align: center;
				padding: 4px;
			}
			.video-cassette {
				font-size: 10px;
				font-weight: 300;
			}

      .title-tags {
          position: absolute;
          bottom: 0;
          right: -30px;

					transform: rotate(-3deg);
      }

			.title-tags span {
				padding: 4px 6px;
				font-size: 12px;

			}

			.title-tags span:nth-child(3n-2){
				background: var(--salmon);
			}
			.title-tags span:nth-child(3n-1){
				background: var(--cyan);
			}
			.title-tags span:nth-child(3n){
				background: var(--burgundy);
				color: var(--white);
			}

			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				.top-post {
					margin-bottom: 0;

				}
				.top-post .title {
					font-size: 1rem;
				}

				.top-post .cassette-rainbow {
					top: 140px;
					left: 0;

				}

				.top-post .rainbow-line {
					height: 5px;
				}

				.top-post a {
					display: grid;
					grid-template-rows: 1fr 1fr;
					grid-template-columns: 1fr 3fr;
					position: relative;
					height: auto;
					color: var(--white);
					padding: 2rem;
				}

				.top-post .tags {
					font-size: 1rem;
					padding: 0.5rem;
				}

				.other-post .sticker:nth-child(n) {
					height: 50px;
					margin: 1rem;
				}
				.other-post .rainbow-line {
					height: 50px;
					width: 7px;
				}

				.other-post .title {
					height: 50px;
					width: auto;
				}

				.other-post h4 {
					font-size: 1rem;

				}

				.title-tags {
					transform: rotate(0);
					bottom: -14px;
				}

				 .title-tags span{
					font-size: 0.5rem ;
				}
				 .macaron {
					 font-size: 0.5rem;
					 display: flex;
					 align-items: center;
				 }

				 .video-cassette {
					 display: none;
				 }
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul>
					{
						posts.map((post, index) => (
							(index === 0 ) ? (
							<li class="top-post">
								<a href={`/blog/${post.slug}/`}>
									<div></div>
									<div class="cassette-rainbow">
										<div class="rainbow-line rainbow-yellow"></div>
										<div class="rainbow-line rainbow-orange"></div>
										<div class="rainbow-line rainbow-red"></div>
										<div class="rainbow-line rainbow-burgundy"></div>
										<div class="rainbow-line rainbow-purple"></div>
										<div class="rainbow-line rainbow-green"></div>
									</div>
									<h4 class="title">{post.data.title}</h4>
									<div class="tags">{post.data.tags? post.data.tags.map((tag)=> <div>{tag}</div>) : 'Blog post'}</div>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>)
						: (
						<li class="other-post">
							<a href={`/blog/${post.slug}/`}>
								<div class="sticker"><div class="cassette-rainbow">
									<div class="rainbow-line rainbow-green"></div>
									<div class="rainbow-line rainbow-blue"></div>
									<div class="rainbow-line rainbow-red"></div>
									<div class="rainbow-line rainbow-yellow"></div>
								</div>

								<div class="title">
                  <h4 >{post.data.title}</h4>
									<div class="title-tags">{post.data.tags?.length ? post.data.tags.map((tag)=> <span> #{tag}</span>) : 'Blog post'}</div>
                </div>
								<div class="macaron">

									<p class="date">
									<FormattedDate date={post.data.pubDate} />
								</p>
									<div class="video-cassette">VIDEO CASSETTE</div>
								</div>
								</div>
							</a>
						</li>
					)
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
